<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/bizivility_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bizivility_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zvility"
        tools:targetApi="31">
        <activity
            android:name=".screens.PersonDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".screens.auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.add_listing.AddListingFormScreen"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".screens.add_listing.YearlyAddListing"
            android:exported="false" />
        <activity
            android:name=".screens.add_listing.MonthlyAddListingScreen"
            android:exported="false" />
        <activity
            android:name=".screens.profile.ReviewsScreen"
            android:exported="false" />
        <activity
            android:name=".screens.profile.InboxScreen"
            android:exported="false" />
        <activity
            android:name=".screens.profile.SavedListingScreen"
            android:exported="false" />
        <activity
            android:name=".screens.profile.UpdateProfileScreen"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.profile.ProfileScreen"
            android:exported="false" />
        <activity
            android:name=".screens.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".screens.auth.LoginActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>